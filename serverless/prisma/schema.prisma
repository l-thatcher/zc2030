datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  ethWallet     String?
  accounts      Account[]
  sessions      Session[]
}

model Project {
  id               String  @id @default(cuid())
  projectname      String
  projectimages    String[]
  cptgbp           Decimal
  location         Location
  totalsupply      Decimal
  remainingsupply  Decimal
  ownerprofile     Ownerprofile
  description      String
  date             String
  nftaddress       String?
}

model Location{
    id             String  @id @default(cuid())
    latitude       Float
    longitude      Float
    streetname     String
    city           String
    county         String
    country        String
    project        Project @relation(fields: [projectId], references: [id])
    projectId      String
}

model Ownerprofile {
  id               String  @id @default(cuid())
  profilePicture   String[]
  type             String
  website          String?
  project          Project @relation(fields: [projectId], references: [id])
  projectId        String
}



